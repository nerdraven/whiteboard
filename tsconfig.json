{
  "include": [
    "./src",
  ],
  "compilerOptions": {
    "types": [
      "./src/types/"
    ],
    "outDir": "./dist/",
    "rootDirs": [
      "./src",
      // Ensure that the relative paths in types produced by bazel get turned into
    ],
    "module": "CommonJS",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "preserveConstEnums": true,
    "strict": true,
    "removeComments": true,
    "target": "ES6",
    "sourceMap": true,
    "skipLibCheck": true,
    "lib": [
      "ES2015",
      "dom"
    ],
    "allowSyntheticDefaultImports": false,
    "esModuleInterop": false
  },
  "exclude": [
    "bazel-*",
    "node_modules"
  ]
}